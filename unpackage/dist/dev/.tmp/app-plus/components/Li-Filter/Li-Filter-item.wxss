
.filter-parent-content {
	font-size: 16px;
	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	width: 100%;
	height: 100%;
	overflow-x: scroll;
	overflow-y: hidden;
}
.filter-item {
	min-width: 100px;
	-webkit-transition: background-color 0.1s linear;
	transition: background-color 0.1s linear;
	white-space: nowrap;
	text-overflow: ellipsis;
	-o-text-overflow: ellipsis;
	overflow-x: hidden;
	overflow-y: scroll;
	text-align: center;
}
.filter-item .filter-item-inner {
	padding: 0 3px;
	line-height: 38px;
	overflow: hidden;
	-webkit-transition: background-color 0.1s linear;
	transition: background-color 0.1s linear;
	text-align: center;
	white-space: nowrap;
	text-overflow: ellipsis;
}

